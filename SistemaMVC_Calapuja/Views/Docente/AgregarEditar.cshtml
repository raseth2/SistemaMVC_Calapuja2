@model SistemaMVC_Calapuja.Models.Docente
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>Agregar / Editar</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Docente/Index">Docente</a>
        </li>
        <li class="breadcrumb-item" active>

            @(Model.docente_id > 0 ? Model.nombre : "Nuevo Registro")
        </li>

    </ol>

</nav>

@using (Html.BeginForm("Guardar", "Docente", FormMethod.Post, new { id = "frm-docente" }))
{
    @Html.HiddenFor(x => x.docente_id)
    <div class="card">
        <div class="card-header">
            Informacion de Docente
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.docente_id, new { @class = "form-control", disabled = true })

            </div>
            <div class="form-group">
                @Html.Label("docente_codigo")
                @Html.TextBoxFor(x => x.docente_codigo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.docente_codigo, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("dni")
                @Html.TextBoxFor(x => x.dni, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.dni, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("apellido")
                @Html.TextBoxFor(x => x.apellido, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.apellido, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("sexo")
                @Html.TextBoxFor(x => x.sexo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.sexo, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("email")
                @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.email, null, new { @class = "text-danger" })

            </div>
            
            <div class="form-group">
                @Html.Label("celular")
                @Html.TextBoxFor(x => x.celular, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.celular, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("cargo")
                @Html.TextBoxFor(x => x.cargo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.cargo, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("condicion")
                @Html.TextBoxFor(x => x.condicion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.condicion, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("categoria")
                @Html.TextBoxFor(x => x.categoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.categoria, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.Label("foto")
                <input type="file" name="file" /> <button type="submit">Subir Foto</button>
                @Html.ValidationMessageFor(x => x.foto, null, new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.Label("Estado")
                <select name="estado" class="form-control">
                    <option @(Model.estado == "" ? "Selected" : "") value="">-Seleccione-</option>
                    <option @(Model.estado == "A" ? "Selected" : "") value="A">Activo</option>
                    <option @(Model.estado == "I" ? "Selected" : "") value="I">Inactivo</option>
                </select>

            </div>
        </div>

    </div>
    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Docente" class="btn btn-danger">Cancelar</a>

    </div>

}