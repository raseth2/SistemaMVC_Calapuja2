@model List<SistemaMVC_Calapuja.Models.Semestre>
@{
    ViewBag.Title = "Index";
}

<h2 class="card" text-center>Gestion de Semestre</h2>
<br />
<div class="text-right">
    <a href="~/Semestre/AgregarEditar/" class="btn btn-secondary text-right">
        Nuevo registro
    </a>
</div>
<br />


<table class="table">
    <thead>
        <tr>
            <th style="width:50px">ID  </th>
            <th style="width:100px">Semestre  </th>
            <th style="width:70px">Año  </th>
            <th style="width:80px">Estado  </th>
            <th style="width:200px">Acciones  </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <th>@(s.semestre_id)</th>
                <th>@(s.nombre)</th>
                <th>@(s.anio)</th>
                <th>@(s.estado == "A" ? "Activo":"Inactivo")</th>
                <th style="align-content:center">
                    <a href="~/Semestre/Visualizar/@s.semestre_id" class="btn btn-xs btn-warning">Visualizar</a>
                    <a href="~/Semestre/AgregarEditar/@s.semestre_id" class="btn btn-xs btn-primary">Modificar</a>
                    <a href="~/Semestre/Eliminar/@s.semestre_id" class="btn btn-xs btn-danger" onclick="return confirm('¿Esta Seguro de Eliminar.........?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>

